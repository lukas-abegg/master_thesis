{
  "bert_model": "bert_base",
  "model": "baseline",
  "dataset": "newsela",
  "tracking_active": true,

  "comet_project": "ts-newsela-baseline",

  "save_config": "checkpoints/baseline_newsela_26082020.json",
  "save_log": "logs/baseline_newsela_26082020.log",
  "print_every": 1,
  "save_every": 1,

  "epochs": 20,
  "batch_size": 32,
  "loss": "lbl",
  "label_smoothing": 0.1,

  "optimizer": "AdamW",
  "optimizer_lr": 2e-3,
  "warmup_steps": 4000,
  "beta_1": 0.9,
  "beta_2": 0.98,
  "epsilon": 1e-9,
  "clip_grads": true,
  "scheduler_active": false,
  "scheduler_step_size": 0.1,
  "scheduler_gamma": 0.1,

  "transformer_n_layers": 6,
  "transformer_ninp": 512,
  "transformer_nheads": 8,
  "transformer_nhidden": 2048,
  "transformer_dropout": 0.1,
  "transformer_use_gate": false
}